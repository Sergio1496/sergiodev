---
import CvButton from "../components/CvButton.astro";
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import Trayectoria from "../components/Trayectoria.astro";
import Habilidades from "../components/Habilidades.astro";

const slideAnimation = {
  old: {
    name: "slide", // same name as the keyframe in layouts/Main
    duration: "0.7s",
    easing: "linear",
    fillMode: "forwards",
  },
  new: {
    name: "slide",
    duration: "0.7s",
    easing: "linear",
    fillMode: "backwards",
  },
};

const slide = {
  forwards: slideAnimation,
  backwards: slideAnimation,
};
---

<Layout title="Sergio EM">
  <main class="text-center justify-center flex flex-col">
    <section class="flex flex-col justify-center items-center pt-24 pb-12">
      <h1
        id="nombre"
        class="pb-2 leading-none sm:leading-tight lg:leading-none tracking-tight text-center bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500 font-josefinBold text-6xl sm:text-5xl md:text-6xl lg:text-6xl delay-[100ms] duration-[500ms] taos:translate-x-[-200px] taos:opacity-0"
        data-taos-offset="100"
      >
        Sergio Expósito
      </h1>

      <h2
        id="role"
        class="text-xl sm:text-2xl md:text-2xl lg:text-2xl sm:leading-tight lg:leading-relaxed tracking-tight text-center font-josefinMedium delay-[100ms] duration-[500ms] taos:translate-y-[200px] taos:opacity-0"
        data-taos-offset="100"
      >
        Desarrollador de aplicaciones móviles
      </h2>
      <h3
        id="desc"
        class="leading-tight sm:leading-tight lg:leading-tight tracking-tight text-center text-lg sm:text-2xl md:text-2xl lg:text-lg font-josefinRegular py-4 delay-[100ms] duration-[500ms] taos:translate-y-[200px] taos:opacity-0"
        data-taos-offset="100"
      >
        Soy un apasionado desarrollador de aplicaciones móviles especializado en
        Flutter e Ionic Framework
      </h3>
    </section>
    <section
      class="flex justify-center delay-[300ms] duration-[500ms] taos:scale-[0.6] taos:opacity-0 sm:py-5 md:py-20 lg:py-0"
      data-taos-offset="100"
    >
      <CvButton />
    </section>

    <section
      class="flex flex-col justify-center items-center sm:py-5 md:py-20 lg:py-16"
      aria-label="Skills"
      transition:animate={slide}
    >
      <Habilidades />
    </section>

    <section
      class="flex text-left sm:py-5 md:py-20 lg:py-20"
      aria-label="Trayectoria"
    >
      <Trayectoria />
    </section>

    <section class="flex flex-col" aria-label="Contacto">
      <Contact />
    </section>
  </main>
</Layout>

<style>
  main {
    padding: 1rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
