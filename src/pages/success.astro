---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mensaje Enviado">
  <!-- Contenedor del Confeti -->
  <div class="confetti-container">
    <!-- Generar m煤ltiples confetti con variaciones -->
    {
      Array(30)
        .fill(null)
        .map((_, index) => (
          <div
            class="confetti"
            style={`
          left: ${Math.random() * 100}%;
          background-color: hsl(${Math.random() * 360}, 70%, 60%);
          opacity: ${Math.random() * 0.5 + 0.5};
          width: ${Math.random() * 8 + 4}px;
          height: ${Math.random() * 8 + 4}px;
          animation-delay: ${Math.random() * 5}s;
          animation-duration: ${Math.random() * 3 + 2}s;
          transform: rotate(${Math.random() * 360}deg);
        `}
          />
        ))
    }
  </div>
  <div id="progress-bar"></div>
  <!-- Contenido principal -->
  <div class="flex items-start justify-center min-h-screen pt-16 relative z-10">
    <div class="text-center">
      <h1
        class="text-5xl md:text-7xl text-green-500 font-josefinBold animate-pulse"
      >
        コ Mensaje Enviado コ
      </h1>
      <p class="mt-6 text-xl text-gray-300">
        Ser谩s redirigido a la p谩gina de inicio en breve...
      </p>
    </div>
  </div>

  <script type="module">
    const redirectTime = 5000; // 5 segundos
    setTimeout(() => {
      window.location.href = "/";
    }, redirectTime);

    // Smooth progress bar
    const progressBar = document.getElementById("progress-bar");
    progressBar.style.transition = `width ${redirectTime}ms linear`;
    // Iniciar la animaci贸n despu茅s de un peque帽o retraso
    setTimeout(() => {
      progressBar.style.width = "100%";
    }, 50);
  </script>

  <!-- Estilos para la animaci贸n de Confeti -->
  <style>
    .confetti-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
      z-index: 0;
    }

    .confetti {
      position: absolute;
      top: -20px;
      border-radius: 50%;
      animation-name: confetti-fall;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      animation-fill-mode: forwards;
    }

    /* Estilos para la barra de progreso */
    #progress-bar {
      position: fixed;
      top: 0;
      left: 0;
      width: 0%;
      height: 4px; /* Ajusta el grosor de la barra */
      border-radius: 4px; /* Esquinas m谩s redondeadas */
      background-image: linear-gradient(
        to right,
        #ff44ec,
        #8b5cf6
      ); /* Gradiente de tu web */
      z-index: 1000;
    }

    @keyframes confetti-fall {
      0% {
        transform: translateY(0) rotate(0deg);
        opacity: 1;
      }
      100% {
        transform: translateY(100vh) rotate(360deg);
        opacity: 0;
      }
    }

    /* Animaci贸n de pulsaci贸n para el mensaje */
    @keyframes pulse {
      0%,
      100% {
        transform: scale(1);
        opacity: 1;
      }
      50% {
        transform: scale(1.05);
        opacity: 0.8;
      }
    }

    .animate-pulse {
      animation: pulse 2s infinite;
    }
  </style>
</Layout>
